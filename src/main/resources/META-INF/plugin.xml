<idea-plugin>
    <id>dev.jeka.ide.intellij</id>
    <name>Jeka</name>
    <version>1.3.0</version>
    <vendor email="djeangdev@yahoo.fr" url="https://jeka.dev">Jeka</vendor>

    <description><![CDATA[
      Integrates with <a href="https://jeka.dev">Jeka Build Tool</a> by providing :
      <ul>
        <li>Scaffolding capabilities to create Jeka projects from scratch</li>
        <li>Synchronize Intellij module dependencies on Jeka definition</li>
      </ul>
   ]]></description>

    <change-notes><![CDATA[
      <ul>
         <li>Bux fixes related to Windows</li>
         <li>Add Jeka console output</li>
      </ul>
    ]]>
    </change-notes>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="193.0"/>

    <extensions defaultExtensionNs="com.intellij">

        <applicationInitializedListener implementation="dev.jeka.ide.intellij.platform.JekaApplicationInitializedListener"/>

        <configurationType implementation="dev.jeka.ide.intellij.runconfigations.JekaToolRunConfigurationType"/>



