<idea-plugin>
    <id>dev.jeka.ide.intellij</id>
    <name>Jeka</name>
    <vendor email="djeangdev@yahoo.fr" url="https://jeka.dev">Jeka</vendor>

    <description><![CDATA[
      Integrates with <a href="https://jeka.dev">Jeka Build Tool</a> by providing :
      <ul>
        <li>Scaffolding capabilities to create Jeka projects from scratch</li>
        <li>Synchronize Intellij module dependencies on Jeka definition</li>
        <li>Run/Debug Jeka methods from Java editor</li>
      </ul>
      More information at <a href="https://github.com/jerkar/jeka-ide-intellij">Git Page</a>
      ]]>
    </description>

    <change-notes><![CDATA[
      <ul>
        <li>Conform to Jeka 0.8.18.RELEASE. Previous versions of Jeka are not supported by this version (breaking API change).</li>
      </ul>
    ]]>
    </change-notes>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <!--
    <depends optional="true" config-file="withKotlin.xml">org.jetbrains.kotlin</depends>
    -->

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="193.2"/>

    <extensions defaultExtensionNs="com.intellij">

        <iconProvider implementation="dev.jeka.ide.intellij.JkIconProvider" order="first"/>

        <applicationInitializedListener implementation="dev.jeka.ide.intellij.JekaApplicationInitializedListener"/>

        <runLineMarkerContributor language="JAVA"
                                  id="jeka"
                                  implementationClass="dev.jeka.ide.intellij.JekaRunLineMarkerContributor"/>

        <moduleType id="JEKA_MODULE_TYPE" implementationClass="dev.jeka.ide.intellij.JekaModuleType"/>

