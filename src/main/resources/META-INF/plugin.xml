<idea-plugin>
    <id>dev.jeka.ide.intellij</id>
    <name>Jeka</name>
    <vendor email="djeangdev@yahoo.fr" url="https://jeka.dev">Jeka</vendor>

    <description><![CDATA[
      Integrates with <a href="https://jeka.dev">Jeka Build Tool</a> by providing :
      <ul>
        <li>Scaffolding capabilities to create Jeka projects from scratch</li>
        <li>Synchronize Intellij module dependencies on Jeka definition</li>
        <li>Run/Debug Jeka methods from Java editor</li>
        <li>Jeka explorer as right-side window tool</li>
      </ul>
      More information at <a href="https://github.com/jerkar/jeka-ide-intellij">Git Page</a>
      ]]>
    </description>

    <change-notes><![CDATA[
      <ul>
        <li>Automatic refresh of window tool</li>
        <li>Polished menus</li>
        <li>Bug Fixes</li>
      </ul>
    ]]>
    </change-notes>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <!--
    <depends optional="true" config-file="withKotlin.xml">org.jetbrains.kotlin</depends>
    -->

    <idea-version since-build="213"/>

    <actions>
        <action
                id="JEKA_SYNC_IML"
                text="Jeka Synchronize iml File"
                icon="AllIcons.Actions.Refresh"
                class="dev.jeka.ide.intellij.action.SyncImlAction">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
        </action>
        <action
                text="Go to KBean source"
                icon="JekaIcons.KBEAN"
                class="dev.jeka.ide.intellij.action.GotoJkBeanAction">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
        </action>
        <action
                id="JEKA_SCAFFOLD"
                text="Scaffold ..."
                icon="JekaIcons.JEKA_GROUP_ACTION"
                class="dev.jeka.ide.intellij.action.ScaffoldAction">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>

    </actions>

    <extensions defaultExtensionNs="com.intellij">

        <iconProvider implementation="dev.jeka.ide.intellij.extension.JkIconProvider" order="first"/>

        <pathMacroContributor implementation="dev.jeka.ide.intellij.extension.JekaPathMacroContributor"/>

        <applicationService
                serviceImplementation="dev.jeka.ide.intellij.extension.JekaApplicationSettingsConfigurable$State"/>

        <applicationConfigurable
            parentId="build.tools"
            instance="dev.jeka.ide.intellij.extension.JekaApplicationSettingsConfigurable"
            id="dev.jeka.ide.intellij.extension.JekaApplicationSettingsConfigurable"

            displayName="Jeka"/>

        <runLineMarkerContributor language="JAVA"
                                  id="jeka"
                                  implementationClass="dev.jeka.ide.intellij.extension.JekaRunLineMarkerContributor"/>

        <toolWindow id="Jeka"
                    icon="/icons/knight-grey-naked.svg"
                    anchor="right"
                    factoryClass="dev.jeka.ide.intellij.extension.JekaToolWindowFactory"/>

        <!--

      <moduleBuilder builderClass="dev.jeka.ide.intellij.unused.newmodule.JekaModuleBuilder"/>


      <configurationType implementation="dev.jeka.ide.intellij.unused.runconfigations.JekaToolRunConfigurationType"/>

       <runConfigurationProducer implementation="ShellConfigurationProducer"/>



      <configurationType implementation="dev.jeka.ide.intellij.platform.JekaRunConfigurationType"/>

       -->
    </extensions>
    
    <projectListeners>

        <listener class="dev.jeka.ide.intellij.extension.JekaToolWindowManagerListener"
                  topic="com.intellij.openapi.wm.ex.ToolWindowManagerListener"/>

        <listener class="dev.jeka.ide.intellij.extension.JekaModuleListener"
                  topic="com.intellij.openapi.project.ModuleListener"/>
    </projectListeners>
    

</idea-plugin>
